<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.pbsnewshouryoutube"
	name="PBS Newshour - Youtube"
	version="0.0.2"
	provider-name="dvatterott">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
    <import addon="script.module.addon.common" version="2.0.0"/>
    <import addon="plugin.video.youtube" version="5.3.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Add on for watching PBS Newshour</summary>
    <description lang="en">Add on that uses youtube to display PBS newshour episodes. PBS newshour is the national news broadcast from PBS. It rocks.</description>
    <platform>all</platform>
    <source>https://github.com/dvatterott/Kodi_addons/</source>
    <website>http://www.pbs.org/newshour/</website>
    <email>dvatterott@gmail.com</email>
    <license>GPL v2.0</license>
    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </assets>
    <news>Brand New Release!</news>
		<platform>all</platform>
  </extension>
</addon>

    <addon id="repository.dvatterott" name="dvatterott Repo" version="0.0.1" provider-name="Dan Vatterott">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="dvatterott Repo">
            <info compressed="false">https://github.com/dvatterott/Kodi_addons/raw/master/_repo/addons.xml</info>
            <checksum>https://github.com/dvatterott/Kodi_addons/raw/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/dvatterott/Kodi_addons/raw/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>dvatterott's repo of Kodi addons</summary>
            <description>This is a repository of Kodi addons developed by dvatterott.</description>
            <platform>all</platform>
    </extension>
</addon>

