<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.pbsnewshouryoutube"
	name="PBS Newshour - Youtube"
	version="0.0.1"
	provider-name="dvatterott">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
    <import addon="script.module.addon.common" version="2.0.0"/>
    <import addon="plugin.video.youtube" version="5.3.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Add on for watching PBS Newshour</summary>
    <description lang="en">Add on that uses youtube to display PBS newshour episodes.PBS newshour is the national news broadcast from PBS. It rocks.</description>
    <platform>all</platform>
    <source>https://github.com/dvatterott/plugin.video.pbsnewshour</source>
    <website>http://www.pbs.org/newshour/</website>
    <email>dvatterott@gmail.com</email>
    <license>GPL v2.0</license>
    <assets>
        <icon>icon.jpg</icon>
        <fanart>fanart.jpg</fanart>
    </assets>
    <news>Brand New Release!</news>
  </extension>
</addon>
